<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="airport.visitreport">
        <t t-foreach="docs" t-as="medical">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div style="text-align: center;">
                            <div>
                                <h2 style="font-weight: bold; color: #000000;">聯新國際醫院桃園國際機場醫療中心－緊急醫療救護申請單</h2>
                            </div>
                        </div>
                        <p/>

                        <div>
                            <div style="font-size: 18pt; font-weight: bold;">
                                基本資料
                            </div>
                        </div>
                        <p/>
                        <table class="table border border-dark" style="width: 100%;">
                            <tr>
                                <td class="border border-dark">病人姓名：<span t-field="medical.name" /></td>
                                <td class="border border-dark">生日：<span t-field="medical.birthday" /></td>
                                <td class="border border-dark">性別：<span t-field="medical.sex_id" /></td>
                                <td class="border border-dark">身分：<span t-field="medical.identity_id" /></td>
                            </tr>
                            <tr>
                                <td class="border border-dark">護照號碼：<span t-field="medical.password_no" /></td>
                                <td colspan="3" class="border border-dark">國籍：<span t-field="medical.nationality_id" /></td>
                            </tr>
                            <tr>
                                <td class="border border-dark">航空公司： <span t-field="medical.airport_co_id" /></td>
                                <td class="border border-dark">班機：<span t-field="medical.Airplane" /></td>
                                <td colspan="2" class="border border-dark">日期：<span t-field="medical.incident_date" /></td>
                            </tr>
                            <tr>
                                <td colspan="4" class="border border-dark">地址：<span t-field="medical.Address" /></td>
                            </tr>
                            <tr>
                                <td colspan="4" class="border border-dark">聯絡電話：<span t-field="medical.Phone" /></td>
                            </tr>
                            <tr>
                                <td class="border border-dark">出發地：<span t-field="medical.departure_id" /></td>
                                <td class="border border-dark">經過地：<span t-field="medical.passing_id" /></td>
                                <td colspan="2" class="border border-dark">目的地：<span t-field="medical.arrival_id" /></td>
                            </tr>
                        </table>

                        <div>
                            <div style="font-size: 18pt; font-weight: bold;">
                                通報作業
                            </div>
                        </div>
                        <p/>
                        <table class="table border border-dark" style="width: 100%;">
                            <tr>
                                <td class="border border-dark">落地前通知，落地時間：
                                    <br/>
                                    <span t-field="medical.landing_time" />
                                </td>
                                <td class="border border-dark">通報時間：
                                    <br/>
                                    <span t-field="medical.informing_time" />
                                </td>
                                <td class="border border-dark">
                                    通報單位/人員：
                                    <span t-field="medical.reporting_unit" />/<span t-field="medical.reporting_unit_personnel" />
                                </td>
                                <td class="border border-dark">電話：<span t-field="medical.reporting_unit_personnel_phone" /></td>
                            </tr>
                            <tr>
                                <td class="border border-dark">通報營安處時間：<span t-field="medical.inform_campingoffice_time" /></td>
                                <td class="border border-dark">
                                    營安處到達現場：
                                    <t t-if="medical.is_active5 == True">
                                        <span>是</span>
                                    </t>
                                    <t t-else="">
                                        <span>否</span>
                                    </t>
                                </td>
                                <td colspan="2" class="border border-dark">
                                    通報事故地點：
                                    <t t-if="medical.informing_place_input_field != ''">
                                        <t t-if="medical.active7_yes != ''">
                                            <span t-field="medical.active8_yes" />
                                        </t>
                                        <t t-else="">
                                            <span t-field="medical.active7_yes" />
                                        </t>
                                    </t>
                                    <t t-else="">
                                        <span t-field="medical.informing_place_input_field" />
                                    </t>
                                </td>
                            </tr>
                            <tr>
                                <td class="border border-dark">醫護抵達時間：<span t-field="medical.arriving_time" /></td>
                                <td colspan="2" class="border border-dark">
                                    10分鐘內到達：
                                    <t t-if="medical.is_active9 == True">
                                        <span>是</span>
                                    </t>
                                    <t t-else="">
                                        <span>否</span>
                                    </t>
                                </td>
                                <td class="border border-dark">檢查時間：<span t-field="medical.checking_time" /></td>
                            </tr>
                        </table>

                        <div>
                            <div style="font-size: 18pt; font-weight: bold;">
                                醫療收費
                            </div>
                        </div>
                        <p/>
                        <table class="table border border-dark" style="width: 100%;">
                            <tr>
                                <td class="border border-dark">出診費：<span t-field="medical.visitfee" /></td>
                                <td class="border border-dark">救護車費用：<span t-field="medical.ambulancefee" /></td>
                                <td colspan="2" class="border border-dark">
                                    付款方式：
                                    <t t-if="medical.selfpay == True">
                                        <span>自付</span>
                                    </t>
                                    <t t-else="">
                                        <span>請款</span>
                                    </t>
                                </td>
                            </tr>
                            <t t-if="medical.selfpay == True">
                                <t t-if="medical.cash == True">
                                    <t t-if="medical.twd == True">
                                        <tr>
                                            <td colspan="4" class="border border-dark">
                                                付款方式：現金<span t-field="medical.afterexchange" />台幣
                                            </td>
                                        </tr>
                                    </t>
                                    <t t-else="">
                                        <tr>
                                            <td colspan="4" class="border border-dark">
                                                付款方式：現金
                                                <span t-field="medical.currencies" />，
                                                兌換後=台幣<span t-field="medical.afterexchange" />
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                                <t t-else="">
                                    <t t-if="medical.billing_discrepancy_check != true">
                                        <tr>
                                            <td colspan="4" class="border border-dark">付款方式：刷卡</td>
                                        </tr>
                                    </t>
                                    <t t-else="">
                                        <tr>
                                            <td class="border border-dark">付款方式：刷卡</td>
                                            <td colspan="3" class="border border-dark">
                                                收費異常，原因：<span t-field="medical.abnormalreason" />
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </t>
                            <t t-else="">
                                <tr>
                                    <td class="border border-dark">申請人：<span t-field="medical.applicant" /></td>
                                    <td class="border border-dark">申請單位：<span t-field="medical.applicantunit" /></td>
                                    <td colspan="2" class="border border-dark">聯絡電話：<span t-field="medical.phonenumber" /></td>
                                </tr>
                            </t>
                            <tr>
                                <td colspan="2" class="border border-dark" style="width: 50%; text-align: center;">內容</td>
                                <td class="border border-dark" style="width: 25%; text-align: center;">同意人簽名/身分</td>
                                <td class="border border-dark" style="width: 25%; text-align: center;">見證人簽名/身分</td>
                            </tr>
                            <tr>
                                <td colspan="2" class="border border-dark" style="text-align: center; vertical-align: middle;">
                                     瞭解醫護人員說明需醫療收費之緣由且同意
                                    <br/>
                                    Understand the medical charge and agree to it.
                                </td>
                                <td class="border border-dark">
                                    <t t-if="medical.agreeperson1">
                                        <span t-field="medical.agreeperson1" t-options-widget="'image'" />
                                    </t>
                                </td>
                                <td class="border border-dark">
                                    <t t-if="medical.witness1">
                                        <span t-field="medical.witness1" t-options-widget="'image'" />
                                    </t>
                                </td>
                            </tr>
                        </table>
                            <div>
                                <div style="font-size: 18pt; font-weight: bold;">
                                    疾病管制署篩檢
                                </div>
                            </div>
                            <p/>
                            <table class="table border border-dark" style="width: 100%;">
                                <tr>
                                    <td class="border border-dark" style="width: 50%;">
                                        健康評估：
                                        <br/>
                                            姓名：<span t-out="medical.name" /> /
                                            關係：<span t-out="medical.relation" /> /
                                            體溫：<span t-out="medical.temperature" /> ℃
                                        <br/>
                                    </td>
                                </tr>
                            </table> 
                    </div>
                    <div class="page">
                        <div>
                            <div style="font-size: 18pt; font-weight: bold;">
                                病情摘要
                            </div>
                        </div>
                        <p/>
                        <table class="table border border-dark" style="width: 100%;">
                        <!--加主訴 -->
                            <tr>
                                <td class="border border-dark" style="width: 20%">
                                    體溫：<span t-field="medical.temperature" />℃
                                </td>
                                <td class="border border-dark" style="width: 20%">
                                    脈搏：<span t-field="medical.pulse" />次/min
                                </td>
                                <td class="border border-dark" style="width: 20%">
                                    呼吸：<span t-field="medical.breath" />次/min
                                </td>
                                <td class="border border-dark" style="width: 20%">
                                    血壓：<span t-field="medical.blood_pressureh" />mmHg
                                </td>
                                <td class="border border-dark" style="width: 20%">
                                    血氧：<span t-field="medical.blood_oxygen" />%
                                </td>
                            </tr>
                            <tr>
                                <t t-if="medical.is_active1 == true">
                                    <td colspan="5" class="border border-dark">意識：Clear</td>
                                </t>
                                <t t-else="">
                                    <td colspan="5" class="border border-dark">
                                        意識：GCS：<span t-field="medical.is_active2" />
                                        (
                                        E<u><span t-field="medical.input_field_E" /></u>&#160;&#160;
                                        V<u><span t-field="medical.input_field_V" /></u>&#160;&#160;
                                        M<u><span t-field="medical.input_field_M" /></u>&#160;&#160;
                                        昏迷指數總分<u><span t-field="medical.total_score" /></u>&#160;&#160;
                                        昏迷程度<u><span t-field="medical.comatose_level" /></u>
                                        )
                                    </td>
                                </t>
                            </tr>
                            <tr>
                                <t t-if="medical.is_no == true">
                                    <td colspan="5" class="border border-dark">過去病史：無</td>
                                </t>
                                <t t-else="">
                                    <td colspan="5" class="border border-dark">
                                        過去病史：<span t-out="medical.input_field1" />&#160;
                                    </td>
                                </t>
                            </tr>
                            <tr>
                               <t t-if="medical.is_active3 == true">
                                    <td colspan="5" class="border border-dark">藥物過敏：無</td>
                                </t>
                                <t t-else="">
                                    <td colspan="5" class="border border-dark">
                                        藥物過敏：<span t-out="medical.input_field" />&#160;
                                    </td>
                                </t>
                            </tr>
                        </table>
                        <!--                       
                            <tr>
                                <td colspan="5" class="border border-dark">
                                    初步診斷：
                                    <br/>
                                    <span t-field="medical.tentative" />
                                </td>
                            </tr>
                        --> 
                        <!--放傷口照片-->
                        <div>
                            <div style="font-size: 18pt; font-weight: bold;">
                                處理摘要
                            </div>
                        </div>
                        <table class="table border border-dark" style="width: 100%;">   
                        
                            <tr>
                                <t t-if="medical.referral == true ">
                                    <td  class="border border-dark" style="width: 30%">
                                        處理摘要：建議轉診至<span t-out="medical.input_field_hospital" />醫院
                                    </td>
                                </t>
                                <t t-else="">
                                    <td class="border border-dark" style="width: 30%">無須轉診</td>
                                </t>
                                <t t-if="medical.Quadruple_single == true ">
                                    <td class="border border-dark" style="width: 30%">有簽四聯單</td>
                                </t>
                                <t t-else="">
                                    <td class="border border-dark" style="width: 30%">沒有簽四聯單</td>
                                </t>
                                <td colspan="2" class="border border-dark" style="width: 40%">
                                    醫師： <span t-field="medical.attending_physician_id"  />
                                </td>
                            </tr>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
